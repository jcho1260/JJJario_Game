<?xml version = "1.0" ?>
<VBox id="SideBar" type="Pane" style="view_resources/launcher/css/SideBar.css">
  <Height>800</Height>
  <Width>300</Width>
  <ImageView id="Logo" type="Leaf">
    <Image>
      <Path>view_resources/images/logo/HorizontalLogo.png</Path>
    </Image>
    <Width>285</Width>
    <Height>100</Height>
  </ImageView>
  <Button id="ProfileButton" type="Leaf">
    <Text>Profile</Text>
    <ImageView>
      <Image>
        <Path>view_resources/images/button_icons/User.png</Path>
      </Image>
      <Ratio>true</Ratio>
      <Height>80</Height>
      <Width>80</Width>
    </ImageView>
    <Event method="setOnAction">
      <Type>profileView</Type>
      <PaneID>LauncherStackPane</PaneID>
      <FilePath>
        <Path>resources/view_resources/launcher/profile/ProfileLogin.xml</Path>
      </FilePath>
    </Event>
  </Button>
  <Button id="GameLibraryButton" type="Leaf">
    <Text>Game Library</Text>
    <ImageView>
      <Image>
        <Path>view_resources/images/button_icons/BookHalf.png</Path>
      </Image>
      <Ratio>true</Ratio>
      <Height>80</Height>
      <Width>80</Width>
    </ImageView>
    <Event method="setOnAction">
      <Type>changeStack</Type>
      <PaneID>LauncherStackPane</PaneID>
      <FilePath>
        <Path>resources/view_resources/launcher/GameLibrary.XML</Path>
      </FilePath>
    </Event>
  </Button>
  <Button id="StageBuilderButton" type="Leaf">
    <Text>Stage Builder</Text>
    <ImageView>
      <Image>
        <Path>view_resources/images/button_icons/HammerAnvil.png</Path>
      </Image>
      <Ratio>true</Ratio>
      <Height>80</Height>
      <Width>80</Width>
    </ImageView>
    <!--<Action>TODO</Action>-->
  </Button>
  <Button id="SettingsButton" type="Leaf">
    <Text>Settings</Text>
    <ImageView>
      <Image>
        <Path>view_resources/images/button_icons/Gears.png</Path>
      </Image>
      <Ratio>true</Ratio>
      <Height>80</Height>
      <Width>80</Width>
    </ImageView>
    <Event method="setOnAction">
      <Type>changeStack</Type>
      <PaneID>LauncherStackPane</PaneID>
      <FilePath>
        <Path>resources/view_resources/launcher/Settings.xml</Path>
      </FilePath>
    </Event>
  </Button>
  <Button id="LogoutButton" type="Leaf">
    <Text>Logout</Text>
    <ImageView>
      <Image>
        <Path>view_resources/images/button_icons/Logout.png</Path>
      </Image>
      <Ratio>true</Ratio>
      <Height>80</Height>
      <Width>80</Width>
    </ImageView>
    <Event method="setOnAction">
      <Type>logout</Type>
      <PaneID>LauncherStackPane</PaneID>
      <FilePath>
        <Path>resources/view_resources/launcher/GameLibrary.XML</Path>
      </FilePath>
    </Event>
  </Button>
  <Button id="ExitButton" type="Leaf">
    <Text>Exit</Text>
    <ImageView>
      <Image>
        <Path>view_resources/images/button_icons/OnOff.png</Path>
      </Image>
      <Ratio>true</Ratio>
      <Height>80</Height>
      <Width>80</Width>
    </ImageView>
    <!--<Action>TODO</Action>-->
  </Button>
</VBox>