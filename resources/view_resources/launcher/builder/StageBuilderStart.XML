<?xml version = "1.0" ?>
<VBox id="StageBuilderInfoVBox" type="Pane" style="view_resources/launcher/builder/css/StartVBox.css">
  <TextObj id="StageBuilderTitle" type="Leaf">
    <Text>Stage Builder Parameters</Text>
  </TextObj>
  <TextField id="GameNameInput" type="Leaf">
    <Width>300</Width>
    <Prompt>Game</Prompt>
  </TextField>
  <TextField id="LevelNameInput" type="Leaf">
    <Width>300</Width>
    <Prompt>Level Name</Prompt>
  </TextField>
  <TextField id="ViewWidthInput" type="Leaf">
    <Width>300</Width>
    <Prompt>View Width</Prompt>
  </TextField>
  <TextField id="ViewHeightInput" type="Leaf">
    <Width>300</Width>
    <Prompt>View Height</Prompt>
  </TextField>
  <TextField id="LevelWidthInput" type="Leaf">
    <Width>300</Width>
    <Prompt>Level Width</Prompt>
  </TextField>
  <TextField id="LevelHeightInput" type="Leaf">
    <Width>300</Width>
    <Prompt>Level Height</Prompt>
  </TextField>
  <Button id="StartBuilderButton" type="Leaf">
    <Text>Start Building!</Text>
    <Event method="setOnAction">
      <Type>startBuilder</Type>
      <FilePath>
        <Path>resources/view_resources/launcher/builder/StageBuilderView.XML</Path>
      </FilePath>
    </Event>
  </Button>
</VBox>