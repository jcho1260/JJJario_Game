      <Name>Player</Name>
      <Method>
        <Name>incrementHealth</Name>
        <Args>
          <Arg>-1</Arg>
        </Args>
      </Method>
    </GameObject>
  </Actor>
  <Actor>
    <Name>MovingDestroyable</Name>
