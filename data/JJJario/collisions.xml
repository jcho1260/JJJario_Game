    <Name>Player</Name>
    <GameObject>
      <Name>Enemy</Name>
      <Method>
        <Name>incrementHealth</Name>
        <Args>
          <Arg>-1</Arg>
        </Args>
      </Method>
    </GameObject>
    <GameObject>
      <Name>Enemy-DOWN</Name>
      <Method>
        <Name>generalBottomCollision</Name>
        <Args>
        </Args>
      </Method>
    </GameObject>
    <GameObject>
      <Name>Coin</Name>
      <Method>
        <Name>incrementScore</Name>
        <Args>
          <Arg>1</Arg>
        </Args>
      </Method>
    </GameObject>
    <GameObject>
      <Name>Mushroom</Name>
      <Method>
        <Name>incrementHealth</Name>
        <Args>
          <Arg>1</Arg>
        </Args>
      </Method>
      <Method>
        <Name>scaleSize</Name>
        <Args>
          <Arg>1.5</Arg>
        </Args>
      </Method>
